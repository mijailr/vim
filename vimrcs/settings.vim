set number relativenumber
set colorcolumn=80
set laststatus=2
syntax on
colorscheme nord
set cursorline
set noshowmode
set expandtab
set shiftwidth=2
set softtabstop=2
let g:nord_italic = 1
let g:nord_italic_comments = 1
let g:nord_uniform_diff_background = 1
let g:lightline = { 'colorscheme': 'nord' }

" Enable deoplete
let g:deoplete#enable_at_startup = 1
